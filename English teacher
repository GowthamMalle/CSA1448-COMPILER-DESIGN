def count_vowels_consonants(sentence):
    vowels = "aeiouAEIOU"
    vowel_count = 0
    consonant_count = 0

    for char in sentence:
        if char.isalpha():
            if char in vowels:
                vowel_count += 1
            else:
                consonant_count += 1

    print(f"Number of Vowels: {vowel_count}")
    print(f"Number of Consonants: {consonant_count}")

# Example usage
sentence = input("Enter a sentence: ")
count_vowels_consonants(sentence)
